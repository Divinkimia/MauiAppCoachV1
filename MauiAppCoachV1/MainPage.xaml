<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCoachV1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">
            <Image
                Source="cat.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a submarine number ten" />
        <!-- zone d'etre de mes valeur Poids , Taille, et age-->
            <Entry
                x:Name="entPoids"
                Placeholder="Poids en Kgs"
                Keyboard="Numeric"
                TextColor="DarkBlue"
                FontSize="22"
                HorizontalOptions="Fill"
                Margin="0,10" />

            <Entry
                x:Name="entTaille"
                Placeholder="Taille en cm"
                Keyboard="Numeric"
                TextColor="DarkBlue"
                FontSize="22"
                HorizontalOptions="Fill"
                Margin="0,10" />

            <Entry
                x:Name="entAge"
                Placeholder="Âge"
                Keyboard="Numeric"
                TextColor="DarkBlue"
                FontSize="22"
                HorizontalOptions="Fill"
                Margin="0,10" />
        <!--Ajout de mon bouton de chois du genre -->
            <VerticalStackLayout Spacing="10" Margin="0,10">
                <Label
                    Text="Genre :"
                    FontAttributes="Bold" />
                <HorizontalStackLayout Spacing="20">
                    <RadioButton
                        x:Name="rbHomme"
                        Content="Homme"
                        IsChecked="True"
                        GroupName="Genre" />
                    <RadioButton
                        x:Name="rbFemme"
                        Content="Femme"
                        GroupName="Genre" />
                    <RadioButton
                        x:Name="rbAutre"
                        Content="Autres"
                        GroupName="Genre" />        
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <Button
                x:Name="btnCalculer"
                Text="Calculer IMG"
                Clicked="OnCalculerClicked"
                HorizontalOptions="Fill"
                Margin="0,20"
                FontSize="18" />

            <Label
                x:Name="lblResultat"
                Text=""
                HorizontalOptions="Center"
                TextColor="DarkGreen"
                Margin="0,20"
                IsVisible="False" />

            <!---->
            <Label
                Text="Coach"
                Style="{StaticResource Headline}"
                HorizontalOptions="Center"
                Margin="0,0,0,30"
                SemanticProperties.HeadingLevel="Level1" />


          
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
